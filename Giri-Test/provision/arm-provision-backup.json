{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "env_name": {
            "type": "string",
            "metadata": {
                "description": "This will be used as the base name for all resources this template creates."
            }
        },
        "number": {
            "type": "int",
            "defaultValue": 1,
            "metadata": {
                "description": "This is the number of VMs we want to create."
            }
        },
        "label": {
            "type": "string",
            "metadata": {
                "description": "This will add a label tag to the VMs which we can use to target the machines for deployment via Ansible."
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "westeurope",
            "allowedValues": [
                "westeurope",
                "northeurope"
            ],
            "metadata": {
                "description": "The Azure region we wish to deploy the Resource group to."
            }
        },
        "vm_size": {
            "type": "string",
            "allowedValues": [
                "Standard_D1",
                "Standard_D1_v2",
                "Standard_D11",
                "Standard_D11_v2",
                "Standard_D11_v2_Promo",
                "Standard_D12",
                "Standard_D12_v2",
                "Standard_D12_v2_Promo",
                "Standard_D13",
                "Standard_D13_v2",
                "Standard_D13_v2_Promo",
                "Standard_D14",
                "Standard_D14_v2",
                "Standard_D14_v2_Promo",
                "Standard_D15_v2",
                "Standard_D2",
                "Standard_D3_v2",
                "Standard_L4s"
            ],
            "metadata": {
                "description": "The size of the VMs we're creating."
            }
        },
        "admin_username": {
            "type": "string",
            "metadata": {
                "description": "The admin username for the VMs"
            }
        },
        "admin_password": {
            "type": "string",
            "metadata": {
                "description": "The admin password for the VMs"
            }
        },
        "os_tag": {
            "type": "string",
            "metadata": {
                "description": "The 'os' tag to add to the VM"
            }
        },
        "image_publisher": {
            "type": "string",
            "defaultValue": "MicrosoftWindowsServer",
            "metadata": {
                "description": "The image publisher for the VM image"
            }
        },
        "image_offer": {
            "type": "string",
            "defaultValue": "WindowsServer",
            "metadata": {
                "description": "The image offer for the VM image"
            }
        },
        "image_sku": {
            "type": "string",
            "defaultValue": "2016-Datacenter",
            "metadata": {
                "description": "The image SKU for the VM image"
            }
        },
        "image_version": {
            "type": "string",
            "defaultValue": "latest",
            "metadata": {
                "description": "The image version for the VM image"
            }
        },
        "resource_group": {
            "type": "string",
            "metadata": {
                "description": "The Resource group name for the VMs"
            }
        },
        "vnet_name": {
            "type": "string",
            "metadata": {
                "description": "The VNET name for the VMs"
            }
        },
        "subnet_name": {
            "type": "string",
            "metadata": {
                "description": "The subnet name for the VMs"
            }
        },
        "nsg_name": {
            "type": "string",
            "metadata": {
                "description": "The NSG name for the VMs"
            }
        },
        "nsg_resource_group": {
            "type": "string",
            "metadata": {
                "description": "The NSG resourceGroup for the VMs"
            }
        },
        "vnet_resource_group": {
            "type": "string",
             "metadata": {
                 "description": "The VNET resourceGroup"
            }
        }
    },
   "variables": {
        "subnetReference": "[concat(resourceId(parameters('vnet_resource_group'),'Microsoft.Network/virtualNetworks', parameters('vnet_name')), '/subnets/', parameters('subnet_name'))]",
        "storageAccountName": "[parameters('env_name')]",
        "T24PubIP": "[concat(parameters('env_name'),'pub-ip')]"
        
    },
    "resources": [
        {
            "type": "Microsoft.Storage/storageAccounts",
            "name": "[variables('storageAccountName')]",
            "apiVersion": "2015-05-01-preview",
            "location": "[resourceGroup().location]",
            "properties": {
                "accountType": "Standard_LRS"
            }
        },
        {
            "apiVersion": "2017-06-01",
            "type": "Microsoft.Network/publicIPAddresses",
            "name": "[variables('T24PubIP')]",
            "location": "[resourceGroup().location]",
            "properties": {
                "publicIPAllocationMethod": "Static"
            },
            "tags": {
                "label": "[parameters('label')]",
                "os": "[parameters('os_tag')]"
            }
        },
        {
            "apiVersion": "2017-03-01",
            "type": "Microsoft.Network/networkInterfaces",
            "name": "[concat(parameters('env_name'),copyIndex(1))]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                    "[concat('Microsoft.Network/publicIPAddresses/',variables('T24PubIP'))]"
            ],
            "properties": {
                "ipConfigurations": [
                    {
                        "name": "ipconfig1",
                        "properties": {
                            "privateIPAllocationMethod": "Dynamic",
                            "publicIPAddress": {
                                   "id": "[resourceId('Microsoft.Network/publicIPAddresses',variables('T24PubIP'))]"
                            },
                            "subnet": {
                                "id": "[variables('subnetReference')]"
                            }
                        }
                    }
                ],
                "networkSecurityGroup": {
                    "id": "[resourceId(parameters('nsg_resource_group'),'Microsoft.Network/networkSecurityGroups', parameters('nsg_name'))]"
                }
            },
            "copy": {
                "name": "niccopy",
                "count": "[parameters('number')]"
            }
        },
        {
            "name": "[concat(parameters('env_name'),copyIndex(1))]",
            "apiVersion": "2015-05-01-preview",
            "type": "Microsoft.Compute/virtualMachines",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[concat('Microsoft.Storage/storageAccounts/', variables('storageAccountName'))]",
                "[concat('Microsoft.Network/networkInterfaces/',  concat(parameters('env_name'),copyIndex(1)))]"
            ],
            "tags": {
                "label": "[parameters('label')]",
                "os": "[parameters('os_tag')]"
            },
            "properties": {
                "hardwareProfile": {
                    "vmSize": "[parameters('vm_size')]"
                },
                "osProfile": {
                   "computerName": "[concat(parameters('env_name'),copyIndex(1))]",
                    "adminUsername": "[parameters('admin_username')]",
                    "adminPassword": "[parameters('admin_password')]"
                },
                "storageProfile": {
                    "imageReference": {
                        "publisher": "[parameters('image_publisher')]",
                        "offer": "[parameters('image_offer')]",
                        "sku": "[parameters('image_sku')]",
                        "version": "[parameters('image_version')]"
                    },
                    "osDisk": {
                        "name": "osdisk",
                        "vhd": {
                            "uri": "[concat('http://',variables('storageAccountName'),'.blob.core.windows.net/vhds/', parameters('env_name'), copyIndex(1),'.vhd')]"
                        },
                        "caching": "ReadWrite",
                        "createOption": "FromImage"
                    }
                },
                "networkProfile": {
                    "networkInterfaces": [
                        {
                            "id": "[resourceId('Microsoft.Network/networkInterfaces', concat(parameters('env_name'),copyIndex(1)))]"
                        }
                    ]
                }
            },
            "copy": {
                "name": "vmcopy",
                "count": "[parameters('number')]"
            }
        }
    ],
    "outputs": {
        "T24PublicIP": {
            "type": "string",
            "value": "[reference(resourceId('Microsoft.Network/publicIPAddresses', variables('T24PubIP'))).IpAddress]"
        }
    }
}
